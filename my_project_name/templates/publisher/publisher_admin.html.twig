{% extends 'base.html.twig' %}

{% block title %}Hello PublisherController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center text-warning">Hello {{app.user.name}}</h1>
    <h2 class="text-center" >Les dernières nouvelles</h2>
    
   
</div>

<!-- On affiche la liste des postulants not the postulant -->
{#{% if not annonce.UserPostulant.isEmpty %}{% endif %}
	{% for user in annonce.UserPostulant %}{% endfor %}#}
{% for annonce in app.user.annonces %}
    {% for postulant in annonce.userPostulant %}
     <p>{{postulant.name}}&nbsp;à postulé sur l'annonce : {{ annonce.titre }}</p>
    {% endfor %} 

 <!-- On efface les messages quand on les a lu -->   
 <div class="col-md-2">
    <a href="{{path('annonce', { id: annonce.id, action: 'delete' })}} "
     class="ml-auto mr-3 text-danger">Supprimer</a>
</div>
	
	{% else %}
	    <p> Aucun artiste n'a postulé à cette annonce pour le moment</p>
	  {% endfor %}
	</div>
{% endblock %}
