{% extends 'base.html.twig' %}

{% block title %}Hello PublisherController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{app.user.name}}</h1>
    <h2>Les nouvelles</h2>
    <!-- On affiche la liste des postulants not the user -->

    <div class="list-group">
        {% for notif in notifs %}
            <li class="list-group-item">
                {{notif.message}} <br>
                <a href="{{path('publisher_admin', { id: notif.id, action: 'delete' })}} "
                class="ml-auto mr-3 text-danger">Supprimer</a>
            </li>  

        {% endfor %}
    </div>
   
</div>
	    <p> Aucun artiste n'a postulé à cette annonce pour le moment</p>
	  
	</div>
{% endblock %}
