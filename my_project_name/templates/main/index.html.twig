{% extends 'base.html.twig' %}
{% block title %}Bienvenue sur l'accueil

{% endblock %}

{% block body %}

	<div class="container-fluid" style="background-image: url(/images/woman-xl_left.jpg); width: 100%; height: 500px;">
		<div class="row text-center  ">
			<div class="col-12">
				<div>
					<h1 class="display-5 mt-2 text-white ">Entrées des Artistes</h1>
					<h2 class="display-5 mt-2 text-white ">Voici un site destiné aux artistes.</h2>
					<h3 class="text-right text-white p-5">Parfois on a tous besoin d'un coup  de main,
						<br>de matos ou un peu d'exposition. Voici l'endroit pour vous !
						<br>
						Que ce soit pour offrir vos services (car on sait tous que les artistes crèves de fin )<br>
						ou que vous soyez à la recherche d'aide pour votre business.
					</h3>
				</div>
			</div>
		</div>
	</div>

	<main>
		<div class="container">
			<div class="row  centered ">

				<div class="col">
					<h2 class="display-5 text-warning text-center py-5">Bienvenue aux nouveaux !</h2>

				</div>
				<div class="row">
					<div class="col">
						<div class="">
							<h5 class="">{# {{ profile.title|date }}#}</h5>
							{% for personne in personnes %}
								{# retourner les 5 dernièrs profiles #}
								<p class="card-text">{{personne.name}}</p>
								<a href="{# {{ path('profile', { id: profile.id }) }}#}" class=" text-info"></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
		<hr>
		<div class="row container-fluid jumbotron index-jumbotron m-2 py-5 ">
			<div class="col-xs-12">
				<h2>Liste des 5 dernières annonces :</h2>
				<a class="btn open-fast btn-primary pull-right" href="#">Déposez une annonce</a>
				{#{% for annonce in annonces %} {# {% include'listeannonce html.twig'with {annonce:annonce }%} {% endfor %}#}
				{# {{ displayAnnonces }} #}
				<div class="row">
					<div
						class="col-12">
						{# afficher les 5 dernières annonce #}
						<div class="annonce"></div>
					</div>
				</div>


				<h2 class="section-title">Les dernières annonces</h2>
			</div>
			<div class="row">
				<div class="col-12">
					{% for annonce in annonces %}
						<h5 class="card">{{ annonce.titre }}
						</h5>
						<p class="card">
							{{ annonce.description|raw|slice(0,5) }}
							...</p>
						<a href=" {{ path('annonce', { id: annonce.id }) }} " class="btn btn-primary bg-info">Lire l'article</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</main>
{% endblock %}

